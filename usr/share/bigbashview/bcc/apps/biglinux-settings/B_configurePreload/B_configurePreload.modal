#!/bin/bash

apps1=(
firefox
brave
chrome
chromium
palemoon
)
apps2=(
opera
vivaldi
epiphany
libreoffice
)

#cabe√ßalho
cat << EOF
<div class="container text-center">
  <div class="row row-cols-2">
EOF

# for lista 1
for i in ${apps1[@]}; do 
cat << EOF
    <div class="col">
EOF
	app="$i"
	if [ -e "/etc/big-preload/enable-${app}" ]; then
		checked="checked"
	else
		checked="unchecked"
	fi
    switch -check "$checked" -marginRight 0 -marginTop 2 -text "$(echo $app | sed -r 's/\b[a-z]+/\u&/g')" -id 1 -run "B_configurePreload/change-preload.run $app" -border 1
cat << EOF
    </div>
EOF
done

#for lista 2
for i in ${apps2[@]}; do 
cat << EOF
    <div class="col">
EOF
	app="$i"
	if [ -e "/etc/big-preload/enable-${app}" ]; then
		checked="checked"
	else
		checked="unchecked"
	fi
    switch -check "$checked" -marginRight 0 -marginTop 2 -text "$(echo $app | sed -r 's/\b[a-z]+/\u&/g')" -id 1 -run "B_configurePreload/change-preload.run $app" -border 1
cat << EOF
    </div>
EOF
done

# Fechamento
cat << EOF
  </div>
</div>
EOF


