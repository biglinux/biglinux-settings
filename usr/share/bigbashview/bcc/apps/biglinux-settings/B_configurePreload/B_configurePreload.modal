#!/bin/bash

apps=(
firefox
brave
chrome
chromium
palemoon
opera
vivaldi
epiphany
libreoffice
)

#cabe√ßalho
grid start -rowColumn 2

# for lista apps
for i in ${apps[@]}; do 
grid colStart
	app="$i"
	if [ -e "/etc/big-preload/enable-${app}" ]; then
		checked="checked"
	else
		checked="unchecked"
	fi
    switch -check "$checked" -marginRight 0 -marginTop 2 -text "$(echo $app | sed -r 's/\b[a-z]+/\u&/g')" -id $i -run "B_configurePreload/change-preload.run $app" -border 1
done

# Fechamento
grid end



